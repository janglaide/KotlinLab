<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/historyView"
        android:textColor="#11361d"
        android:textSize="19sp"
        android:layout_marginLeft="@dimen/button_left_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/button_left_margin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_history"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="@dimen/button_left_margin"
        android:layout_marginStart="@dimen/button_left_margin"
        android:onClick="onClearHistoryClicked">

    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_tasks"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="@dimen/button_left_margin"
        android:layout_marginStart="@dimen/button_left_margin"
        android:onClick="onShowTasksClicked"
>

    </Button>
</LinearLayout>